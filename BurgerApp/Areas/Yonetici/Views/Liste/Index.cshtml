@model IkiliViewModel

<div class="d-flex justify-content-center text-center">
    <h1 class="fw-bold fst-italic text-warning">MALZEMELER VE MENULER</h1>
</div>

<div class="container mt-5">

    <div class="row">
        <h2>Extra Malzeme Listesi</h2>
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Ad
                    </th>
                    <th>Fiyat</th>
                    <th>Resim</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.Extralar)
                    {
                        <tr>
                            <td>@item.ExtraMalzemeAdi</td>
                            <td>@item.ExtraMalzemeFiyat</td>

                            <td>
                                <img height="60px" width="60px" alt="resim yok" src="~/img/@item.Resim">
                            </td>
                            <td> <a asp-controller="ExtraMalzeme" asp-action="Sil" asp-route-id="@item.Id" class="btn btn-danger" style="width:150px"> <i class="fa-solid fa-trash"></i> SİL</a> </td>
                            <td> <a asp-controller="ExtraMalzeme" asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-warning" style="width:150px">  <i class="fa-solid fa-bolt"></i> GUNCELLE</a> </td>

                        </tr>

                    }
                }
            </tbody>

        </table>
    </div>
    <div class="row">
        <h2>Menu Listesi</h2>
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Ad
                    </th>
                    <th>Fiyat</th>
                    <th>Resim</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.Menuler)
                    {
                        <tr>
                            <td>@item.MenuAdi</td>
                            <td>@item.Fiyat</td>

                            <td>
                                <img height="60" width="60" alt="resim yok" src="~/img/@item.Resim">
                            </td>
                            <td> <a asp-controller="Menu" asp-action="Sil" asp-route-id="@item.Id" class="btn btn-danger" style="width:150px"> <i class="fa-solid fa-trash"></i> SİL</a> </td>
                            <td> <a asp-controller="Menu" asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-warning" style="width:150px">  <i class="fa-solid fa-bolt"></i> GUNCELLE</a> </td>

                        </tr>

                    }
                }
            </tbody>

        </table>
    </div>

</div>

