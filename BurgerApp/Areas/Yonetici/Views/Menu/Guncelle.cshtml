@model MenuViewModel

<div class="card">
    <div class="card-header">
        <h1> Guncelleme</h1>
    </div>
    <div class="card-body">
        <form asp-area="Yonetici" asp-action="Guncelle" asp-controller="Menu" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="MenuAd">Menü Adı:</label>
                <input asp-for="MenuAd" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MenuFiyat">Menü Fiyatı:</label>
                <input asp-for="MenuFiyat" class="form-control" />
            </div>           
            <div class="form-group">
                <label asp-for="Resim">Resim Guncelleme :</label>
                <input type="file" class="form-control" asp-for="Resim" />
            </div>
            <button type="submit" class="btn btn-primary">Guncelle</button>
        </form>
    </div>
</div>
