@model MenuViewModel
<div class="card">
    <div class="card-header"><h1 class="bg-primary text-center">Menü Ekle</h1>
        </div>


    <div class="card-body">

        <form asp-action="Ekle" asp-area="Yonetici" asp-controller="Menu" method="post" enctype="multipart/form-data">

            <div class="form-group">

                <label asp-for="MenuAd"> Menü Adı</label>
                <input asp-for="MenuAd" class="form-control" />

            </div>
            <div class="form-group">

                <label asp-for="MenuFiyat"> Menü Fiyat</label>
                <input asp-for="MenuFiyat" class="form-control" />

            </div>          
            <div class="form-group">
                <label asp-for="Resim">Resim ekleme</label>
                <input asp-for="Resim" type="file" class="form-control" />
                

            </div>
            <button type="submit" class="btn btn-success mt-3">Menü Ekle</button>

        </form>

    </div>

</div>