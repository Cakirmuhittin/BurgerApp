    <table class="d-lg-table table-bordered table table-hover">
        <thead>
            <tr>
                <th class="text-white fw-bold ">Menü Resmi</th>
                <th class="text-white fw-bold ">Menü Adı</th>
                <th class="text-white fw-bold ">Menü Fiyat</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img width="150px" height="65px" src="~/img/@ViewBag.Resim" alt="resim yok"></td>
                <td class="text-white fw-bold fs-3 ">@ViewBag.Menu</td>
                <td><p class="text-white fw-bold fs-3">$@ViewBag.Fiyat.ToString("0.00")</p></td>
            </tr>
        </tbody>

    </table>

</div>
