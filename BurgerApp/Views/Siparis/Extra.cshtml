<div class="container">
    <div class="d-flex justify-content-center">
        <h1 class="text-center fw-bold fst-italic text-warning">EXTRA MALZEMELER</h1>
    </div>
    <div class="row pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4">
                <div class="card" style="width:14rem;  border:2px solid wheat ; border-radius:3px;">
                    <img class="card-img mt-2" src="~/img/@item.Resim" alt="resim yok">

                    <div class="card-body fw-bold text-white">
                        <h5 class="card-title">@item.ExtraMalzemeAdi</h5>
                        <p class="card-text">$@item.ExtraMalzemeFiyat.ToString("0.00")</p>
                        <a asp-controller="Siparis" asp-action="Sepet" asp-route-id="@item.Id" class="btn btn-primary">Malzeme Ekle</a>
                    </div>

                </div>
            </div>
        }
    </div>
</div>