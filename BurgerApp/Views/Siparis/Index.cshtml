
@using BurgerApp.Areas.Identity.Data;
@model List<Menu>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<div class="container">
    <div class="d-flex justify-content-center">
        <h1 class="text-center fw-bold fst-italic text-warning">MENULER</h1>
    </div>
    <div class="row pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4">
                <div class="card" style="width: 14rem; border:2px solid wheat ; border-radius:3px;">
                    <img class="card-img mt-2" src="~/img/@item.Resim" alt="resim yok">

                    <div class="card-body fw-bold text-white">
                        <h5 class="card-title">@item.MenuAdi</h5>
                        <p class="card-text">$@item.Fiyat.ToString("0.00")</p>
                        <a asp-controller="Siparis" asp-action="Extra" asp-route-id="@item.Id" class="btn btn-primary">Sipariş Ver</a>
                    </div>

                </div>
            </div>
        }
    </div>
</div>