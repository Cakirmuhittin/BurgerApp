
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<div class="row">
    <h1 class="d-flex text-center justify-content-center mt-2 fst-italic text-danger fw-bold"><i class="bi bi-fire"></i>Hot's</h1>
</div>

<div>


    <div id="carouselExampleIndicators" class=" carousel slide mb-4 mt-1" data-bs-ride="carousel">
        @{
            var adet = 0;

        }
        <div class="carousel-indicators">
            @foreach (var item in TempData["resimler"] as string[])
            {
                if (adet == 0)
                {
                    <button type="button" data-bs-target="#carouselExampleIndicators" class="active" data-bs-slide-to="@adet.ToString()"></button>
                }
                else
                {
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@adet.ToString()"></button>
                }
                adet++;
            }
        </div>
        @{
            var counter = 0;
        }

        <div class="carousel-inner">
            @foreach (var item in TempData["resimler"] as string[])
            {
                var isim = item.Split("\\");
                var resimIsmi = isim[isim.Length - 1];
                if (counter == 0)
                {
                    <div class="carousel-item active">

                        <img src="~/img/@resimIsmi.ToString()" class="d-block w-100" height="500" />
                        <div class="carousel-caption">
                            <h3 class="fst-italic fw-bold">HotBurger</h3>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="~/img/@resimIsmi.ToString()" class="d-block w-100" height="500" />
                        <div class="carousel-caption">
                            <h3 class="fst-italic fw-bold">CheeseBurger</h3>
                        </div>
                    </div>
                }
                counter++;
            }

        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>      

    </div>
    <div>
        <a class="btn btn-warning" asp-controller="Home" asp-action="MenuEkle"> Siparis Ver..</a>
    </div>
</div>
