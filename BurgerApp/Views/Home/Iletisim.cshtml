<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/iletisim.css" rel="stylesheet" />
<div class="container contact mb-5">
    <div class="row">
        <div class="col-md-3 ">
            <div class="contact-info ">
                <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image" />
                <h2 class="fw-bold fst-italic fs-2 text-white">İletişim</h2>
            </div>
        </div>
        <div class="col-md-9">
            <div class="contact-form">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="fname">Adınız :</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="fname" placeholder="Adınız..." name="fname">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="lname">Soyadınız :</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="lname" placeholder="Soyadınız..." name="lname">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Email :</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" placeholder="Mail giriniz..." name="email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="comment">İçerik :</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="5" id="comment"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10 mt-2">
                        <button type="submit" class="btn btn-success">Gönder</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

